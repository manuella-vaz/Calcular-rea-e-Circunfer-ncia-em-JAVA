package exerciciosala1;

	import java.util.Scanner;

	public class CalcularAreaCircunferencia {	 
public static void main(String[] args) {
System.out.println("informe o raio da circunferencia: ");	 
Scanner scan = new Scanner(System.in);
double raio = scan.nextDouble ();
double pi = 3.1416; // Valor aproximado de π
double area = Math.PI * Math.pow(raio, 2);
System.out.println("A área da circunferencia é: " + area);
scan.close();
}	
}
